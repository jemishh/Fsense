<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SplashScreen"
    android:id="@+id/bg_splash"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shapeAppearance="@style/bottom_round"
        android:layout_marginBottom="30dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/theme_red"
        android:id="@+id/cv_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:textColor="#CEFFFFFF"
            android:layout_marginBottom="7dp"
            android:textSize="12sp"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_fsense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/vladimir"
        android:text="@string/fsense"
        android:elevation="20dp"
        android:gravity="center"
        android:textSize="80sp"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>