<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_red"
            android:paddingTop="60dp"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">
            <!--app:layout_scrollFlags="scroll|exitUntilCollapsed" to prevent automatically collapse the bar all the way to top-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="130dp"
                    android:layout_height="match_parent" />
                <!--<com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10dp"
                android:layout_marginStart="120dp">-->

                <FrameLayout
                    android:id="@+id/fl_profileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="20dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.3">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start|center_vertical"
                        android:background="@color/trans"
                        android:indeterminateTint="@color/white"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_profileTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/tv_displayName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text=""
                            android:textColor="#FAC4C1" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:padding="3dp"
                            android:text=""
                            android:textColor="@android:color/white" />

                        <include layout="@layout/snippet_post_follow" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="8dp"
                            tools:ignore="TouchTargetSizeCheck">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/follow"
                                android:textColor="@color/theme_red"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"/>
                        </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_unfollow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="8dp"
                                tools:ignore="TouchTargetSizeCheck"
                                android:visibility="gone">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:text="@string/unfollow"
                                    android:textColor="@color/theme_red"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"/>
                            </com.google.android.material.card.MaterialCardView>
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <!-- </com.google.android.material.card.MaterialCardView>-->
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <!--  <androidx.core.widget.NestedScrollView
          android:id="@+id/nestedScrollProfile"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_gridProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <!-- </androidx.core.widget.NestedScrollView>-->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main.toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_collapseMode="pin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1" />

            <TextView
                android:id="@+id/tv_usernameTop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cimg_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:elevation="30dp"
        android:padding="2dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="0dp"
        app:finalHeight="@dimen/image_final_width"
        app:finalToolbarHeight="?attr/actionBarSize"
        app:finalXPosition="@dimen/spacing_small"
        app:finalYPosition="@dimen/spacing_small"
        app:layout_behavior="com.example.fsense.utils.AvatarImageBehaviorTest" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:padding="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_menu"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="50dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:padding="2dp"
                android:src="@drawable/menu" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressNewUpload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:elevation="30dp"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_red" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>