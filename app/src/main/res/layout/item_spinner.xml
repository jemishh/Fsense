<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_spinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_downArrow"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/img_downArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/down_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_spinnerItem"
        app:layout_constraintTop_toTopOf="@id/tv_spinnerItem"
        app:layout_constraintStart_toEndOf="@+id/tv_spinnerItem"/>
</androidx.constraintlayout.widget.ConstraintLayout>